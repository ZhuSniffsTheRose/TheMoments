<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="330dp">


    <ImageView
        android:id="@+id/profile_bg_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_image_height"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#00BCD4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_avatar_img"
        android:layout_width="@dimen/profile_avatar_width"
        android:layout_height="@dimen/profile_avatar_height"
        android:layout_marginEnd="@dimen/profile_avatar_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/profile_avatar_img"
        app:layout_constraintTop_toTopOf="@id/profile_avatar_img" />


</androidx.constraintlayout.widget.ConstraintLayout>